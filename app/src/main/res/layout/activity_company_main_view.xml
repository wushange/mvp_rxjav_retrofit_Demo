<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/include_app_title" />


    <com.dmcc.dmcc_crm.customview.CustomSearchView
        android:id="@+id/csv_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/apptitle" />

    <ListView
        android:id="@+id/lv_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/csv_search_view"
        android:divider="@null"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/tv_dialog"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/v2_gallery_contacts_dialog_background"
        android:gravity="center"
        android:padding="5dip"
        android:textColor="@color/base_actionbar_bg"
        android:textSize="35.0dip"
        android:visibility="invisible" />

    <com.dmcc.dmcc_crm.customview.MyLetterView
        android:id="@+id/mlv_right_letter"
        android:layout_width="20dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/csv_search_view"
        android:background="@color/transparent" />
</RelativeLayout>
