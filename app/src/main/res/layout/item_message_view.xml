<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_msg_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/list_itease_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/iv_item_messgae_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/test_jilu" />

        <TextView
            android:id="@+id/tv_item_messgae_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tv_item_message_name"
            android:layout_marginRight="15dp"
            android:text="刚刚"
            android:textColor="@color/list_itease_secondary_color"
            android:textSize="13sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_item_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_item_message_desc"
            android:layout_alignTop="@+id/iv_item_messgae_icon"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="苏宁易购"
            android:textColor="@color/item_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_item_message_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_messgae_icon"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/iv_item_messgae_icon"
            android:ellipsize="end"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="您订阅的招标信息"
            android:textColor="@color/item_sub_text_color"
            android:textSize="14sp"
            android:visibility="visible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/darkgrey" />

</LinearLayout>