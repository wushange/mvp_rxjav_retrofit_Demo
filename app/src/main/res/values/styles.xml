<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appThemeColor</item>
        <item name="colorPrimaryDark">@color/appThemeColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 标题栏样式 -->
    <style name="title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/appThemeColor</item>
    </style>    <!-- 四大天王样式 -->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="first_letter">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">#f4f4f4</item>
        <item name="android:textColor">@color/first_letter</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
